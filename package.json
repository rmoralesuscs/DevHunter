{
  "name": "dev-hunter-monorepo",
  "private": true,
  "version": "1.0.0",
  "description": "Dev Hunter - AI-Powered Test Management Platform (Monorepo)",
  "workspaces": [
    "frontend"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=frontend",
    "build": "npm run build --workspace=frontend",
    "dev:frontend": "npm run dev --workspace=frontend",
    "build:frontend": "npm run build --workspace=frontend",
    "dev:backend": "cd backend && mvn spring-boot:run",
    "build:backend": "cd backend && mvn clean install",
    "test:backend": "cd backend && mvn test",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:restart": "docker-compose restart backend",
    "start": "npm run docker:up && npm run dev",
    "install:all": "npm install && npm install --workspace=frontend",
    "clean": "rm -rf frontend/node_modules frontend/dist backend/target"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}

